@model MeetingRoomViewModel

@{
    ViewData["Title"] = "Meeting Page";
}

    <h1>
        Enter Your Desired Time Of Meeting!
    </h1>
    <form method="post">
        <input asp-for="CurrentDate" type="date" id="datepicker" width="276" />


        <div class="form-group">
            <label asp-for="Participants">Participants</label>
            <select asp-for="Participants" class="form-control">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Hours">Hours</label>
            <select asp-for="Hours" class="form-control">
                <option>0</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Minutes">Minutes</label>
            <select asp-for="Minutes" class="form-control">
                <option>0</option>
                <option>15</option>
                <option>30</option>
                <option>45</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>



